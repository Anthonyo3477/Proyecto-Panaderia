<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || "Repostería" %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/css/pasteleria.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Panadería Don Juanito</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Panaderia">Panadería</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Reposteria">Repostería</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Carro">Carro</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Login_Registrar">Registro</a></li>
                    <li class="nav-item"><a class="nav-link" href="/AgregarProducto">Agregar Productos</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <main class="container mt-5 pt-4">
        <h1 class="text-center">Repostería</h1>
        <p class="text-center">Explora nuestros deliciosos productos.</p>

        <!-- Tabla de productos -->
        <div class="table-responsive mt-4">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (productos && productos.length > 0) { %>
                        <% productos.forEach((producto, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= producto.nombre %></td>
                                <td><%= producto.descripcion %></td>
                                <td>
                                    <a href="/Reposteria/<%= producto.id %>" class="btn btn-sm btn-info">Ver</a>
                                    <a href="/Reposteria/editar/<%= producto.id %>" class="btn btn-sm btn-warning">Editar</a>
                                    <form action="/Reposteria/eliminar/<%= producto.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('¿Estás seguro de eliminar este producto?')">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">No hay productos de repostería disponibles.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <p>&copy; <%= new Date().getFullYear() %> - Panadería Don Juanito</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script personalizado -->
    <script src="/js/site.js"></script>
</body>

</html>